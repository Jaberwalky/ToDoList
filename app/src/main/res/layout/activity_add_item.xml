<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.example.todolist.AddItemActivity">

    <EditText
        android:id="@+id/title_text"
        android:layout_width="299dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/day_text"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="DD"
        android:inputType="date"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/year_text"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="YYYY"
        android:inputType="date"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/month_text"
        android:layout_width="92dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="MM"
        android:inputType="date"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:layout_constraintRight_toLeftOf="@+id/year_text"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/day_text"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/details_view"
        android:layout_width="301dp"
        android:layout_height="151dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/month_text" />

    <Button
        android:id="@+id/add_list_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onAddItemButtonPressed"
        android:text="Button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/details_view" />

</android.support.constraint.ConstraintLayout>
