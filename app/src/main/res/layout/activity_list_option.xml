<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.example.todolist.ListOptionActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="168dp"
        android:layout_height="57dp"
        android:text="@string/done_text"
        android:textAlignment="center"
        android:textSize="48sp"
        android:layout_marginLeft="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/show_done_list"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.225"
        android:layout_marginTop="81dp"
        app:layout_constraintTop_toBottomOf="@+id/to_do_num_of_items" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="168dp"
        android:layout_height="57dp"
        android:text="@string/to_do_text"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/show_to_do_list"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.569" />

    <TextView
        android:id="@+id/done_num_of_items"
        android:layout_width="175dp"
        android:layout_height="43dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/show_done_list"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/to_do_num_of_items"
        android:layout_width="175dp"
        android:layout_height="43dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/show_to_do_list"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.63" />

    <Button
        android:id="@+id/show_to_do_list"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginRight="43dp"
        android:background="@android:drawable/ic_media_play"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="onToDoListClicked"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="95dp" />

    <Button
        android:id="@+id/show_done_list"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="144dp"
        android:layout_marginRight="43dp"
        android:background="@android:drawable/ic_media_play"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="onDoneListClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
